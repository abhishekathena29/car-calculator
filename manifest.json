{
    "manifest_version": 3,
    "name": "Car Efficiency & Value Score",
    "version": "1.0.3",
    "description": "Analyze car specifications and compute efficiency, safety, value-for-money scores with AI insights",
    "permissions": [
        "storage",
        "activeTab"
    ],
    "host_permissions": [
        "https://www.cardekho.com/*",
        "https://www.carwale.com/*",
        "https://www.autocarindia.com/*",
        "https://www.team-bhp.com/*",
        "https://www.autoportal.com/*",
        "https://www.zigwheels.com/*",
        "https://www.overdrive.in/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.cardekho.com/*",
                "https://www.carwale.com/*",
                "https://www.autocarindia.com/*",
                "https://www.team-bhp.com/*",
                "https://www.autoportal.com/*",
                "https://www.zigwheels.com/*",
                "https://www.overdrive.in/*"
            ],
            "js": [
                "src/utils.js",
                "src/scoring.js",
                "src/gemini.js",
                "src/extractors/generic.js",
                "src/extractors/cardekho.js",
                "src/extractors/carwale.js",
                "src/content.js"
            ],
            "css": [
                "src/overlay.css"
            ],
            "run_at": "document_idle"
        }
    ],
    "action": {
        "default_popup": "popup/popup.html",
        "default_title": "Car Efficiency Settings"
    },
    "background": {
        "service_worker": "service_worker.js"
    },
    "icons": {
        "16": "icons/car_48.png",
        "48": "icons/car_48.png",
        "128": "icons/car_48.png"
    }
}